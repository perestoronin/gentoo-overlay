+target_compile_definitions(PCSX2_FLAGS INTERFACE ST_NO_EXCEPTION_HANDLING)
+
 # Check that people use the good file
 if(NOT TOP_CMAKE_WAS_SOURCED)
 	message(FATAL_ERROR "
@@ -1081,6 +1084,7 @@ target_sources(PCSX2 PRIVATE
 	${pcsx2ps2Headers}
 )
 
+
 # platform sources
 # Linux
 if(Linux)
@@ -1123,7 +1127,7 @@ target_link_libraries(PCSX2_FLAGS INTERFACE
 	imgui
 	fmt::fmt
